      en: {
        actions: {
          title: 'Actions',
          reset: 'Reset',
          copy_mermaid_code: 'Copy Mermaid Code',
          copied_mermaid_code: 'Copied Mermaid Code',
          copy_markdown_code: 'Copy Markdown Code',
          copied_markdown_code: 'Copied Markdown Code',
